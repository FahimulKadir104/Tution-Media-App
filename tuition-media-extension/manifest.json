{
  "manifest_version": 3,
  "name": "Tuition Media",
  "version": "1.0.0",
  "description": "Quick access to messages, posts, and dashboard for Tuition Media",
  "permissions": [
    "storage",
    "notifications",
    "activeTab"
  ],
  "host_permissions": [
    "http://localhost:3000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Tuition Media",
    "default_icon": "icons/icon-128.svg"
  },
  "icons": {
    "16": "icons/icon-16.svg",
    "48": "icons/icon-48.svg",
    "128": "icons/icon-128.svg"
  }
}
